<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.towsal.towsal.views.fragments.CarInformationFragment" />


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layoutDirection="locale"
            android:onClick="@{(view) -> fragment.onClick(view)}"
            android:paddingBottom="@dimen/_20sdp"
            android:textDirection="locale">

            <TextView
                android:id="@+id/tvTitleUserStatus"
                style="@style/InterRegularFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:text="@string/identification_status"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/rlUserStatus"
                android:layout_width="0dp"
                android:layout_height="@dimen/_29sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/button_primary_bg"
                android:onClick="@{(view) -> fragment.onClick(view)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleUserStatus">

                <TextView
                    android:id="@+id/spUserStatus"
                    style="@style/InterRegularFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="@string/select_user_status"
                    android:textColor="@color/colorButtonGrey"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_arrow_down_blue"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtUserStatusRelatedNumber"
                style="@style/InterRegularFont"
                android:layout_width="0dp"
                android:layout_height="@dimen/_29sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/button_primary_bg"
                android:gravity="center_vertical"
                android:hint="@string/cr_number"
                android:inputType="number"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                android:textColorHint="@color/colorButtonGrey"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlUserStatus"
                tools:ignore="Autofill" />

            <View
                android:id="@+id/viewUserStatus"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@color/text_color_white_variation_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtUserStatusRelatedNumber" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUserFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/viewUserStatus">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clUserStatusRelatedFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvUserStatusRelatedTitle"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:text="@string/upload_image_of_commercial_registration"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/cvUserStatusRelatedImage"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvUserStatusRelatedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">


                        <ImageView
                            android:id="@+id/ivCommercialRegister"
                            android:scaleType="fitXY"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnUserStatusRelatedImage"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/button_blue_bg"
                        android:ellipsize="end"
                        android:onClick="@{(view)->fragment.onClick(view)}"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:singleLine="true"
                        android:text="@string/upload_your_photo"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvUserStatusRelatedImage"
                        tools:ignore="ContentDescription" />



                    <View
                        android:id="@+id/viewUserStatusRelated"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:background="@color/text_color_white_variation_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnUserStatusRelatedImage" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCompanyVatRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@id/clUserStatusRelatedFields">

                    <TextView
                        android:id="@+id/tvVatRegistrationTitle"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:text="@string/upload_image_of_vat_certificate"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/cvVatCertificate"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvVatRegistrationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">


                        <ImageView
                            android:id="@+id/ivVatCertificate"
                            android:scaleType="fitXY"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnVatRegistration"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/button_blue_bg"
                        android:ellipsize="end"
                        android:onClick="@{(view)->fragment.onClick(view)}"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:singleLine="true"
                        android:text="@string/upload_your_photo"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvVatCertificate"
                        tools:ignore="ContentDescription" />

                    <View
                        android:id="@+id/viewVatRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_29sdp"
                        android:background="@color/text_color_white_variation_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnVatRegistration" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/clUserFields">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:text="@string/pickup_location"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/editInfoLocation"
                    style="@style/InterMediumFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:onClick="@{(view)->fragment.onClick(view)}"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/add"
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView6" />

                <EditText
                    android:id="@+id/locationBtn"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_rating_review"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="start|center"
                    android:hint="@string/enter_location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:onClick="@{(view)->fragment.onClick(view)}"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/colorButtonGrey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="@id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="@string/what_car_do_you_have"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="@id/locationBtn"
                    app:layout_constraintStart_toStartOf="@+id/locationBtn"
                    app:layout_constraintTop_toBottomOf="@+id/locationBtn" />

                <TextView
                    android:id="@+id/editInfoCar"
                    style="@style/InterMediumFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{(view)->fragment.onClick(view)}"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/add"
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="@+id/locationBtn"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                <EditText
                    android:id="@+id/carInfoBtn"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_primary_bg"
                    android:focusable="false"
                    android:gravity="start|center"
                    android:hint="@string/enter_car"
                    android:inputType="text"
                    android:onClick="@{(view)->fragment.onClick(view)}"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/colorButtonGrey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="@id/editInfoCar"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    tools:ignore="Autofill" />

                <View
                    android:id="@+id/viewCarInfo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:background="@color/line_bg_1"
                    app:layout_constraintTop_toBottomOf="@id/carInfoBtn" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clVehicleRegistrationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@id/viewCarInfo">

                    <TextView
                        android:id="@+id/tvVehicleRegistrationCard"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_snap_of_istimara"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/cvVehicleRegistrationCard"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvVehicleRegistrationCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">


                        <ImageView
                            android:id="@+id/ivVehicleRegistrationCard"
                            android:scaleType="fitXY"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnUploadVehicleRegistrationCard"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/button_blue_bg"
                        android:ellipsize="end"
                        android:onClick="@{(view)->fragment.onClick(view)}"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:singleLine="true"
                        android:text="@string/upload_your_photo"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvVehicleRegistrationCard"
                        tools:ignore="ContentDescription" />

                    <View
                        android:id="@+id/viewVehicleRegistrationCard"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@color/text_color_white_variation_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnUploadVehicleRegistrationCard" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTechnicalReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@id/clVehicleRegistrationCard">

                    <TextView
                        android:id="@+id/tvTechnicalReport"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_latest_technical_report"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/cvTechnicalReport"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTechnicalReport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">


                        <ImageView
                            android:id="@+id/ivTechnicalReport"
                            android:scaleType="fitXY"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <WebView
                            android:visibility="gone"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:id="@+id/wvPdfLoader"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <View
                            android:id="@+id/viewPdf"
                            android:visibility="gone"
                            android:onClick="@{(view)->fragment.onClick(view)}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnUploadTechnicalReport"
                        style="@style/InterRegularFont"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_29sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/button_blue_bg"
                        android:ellipsize="end"
                        android:onClick="@{(view)->fragment.onClick(view)}"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:singleLine="true"
                        android:text="@string/upload_your_photo"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cvTechnicalReport"
                        tools:ignore="ContentDescription" />

                    <View
                        android:id="@+id/viewTechnicalReport"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@color/text_color_white_variation_6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnUploadTechnicalReport" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/textView10"
                    style="@style/SharpGroteskSemiBoldFont11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/transmission"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_36ssp"
                    app:layout_constraintEnd_toEndOf="@id/clTechnicalReport"
                    app:layout_constraintStart_toStartOf="@+id/clTechnicalReport"
                    app:layout_constraintTop_toBottomOf="@+id/clTechnicalReport" />

                <RadioGroup
                    android:id="@+id/transmissionRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/automatic"
                        style="@style/InterRegularFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio"
                        android:buttonTint="@color/colorAccent"
                        android:checked="true"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/automatic"
                        android:textSize="@dimen/_13ssp" />

                    <RadioButton
                        android:id="@+id/manual"
                        style="@style/InterRegularFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:buttonTint="@color/colorAccent"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/manual"
                        android:textSize="@dimen/_13ssp" />
                </RadioGroup>

                <CheckBox
                    android:id="@+id/majorAccidentCheck"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:buttonTint="@color/colorAccent"
                    android:button="@drawable/custom_check_box_black"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_11ssp"
                    android:text="@string/car_has_never_been_in_any_major_accident"
                    app:layout_constraintEnd_toEndOf="@+id/clTechnicalReport"
                    app:layout_constraintStart_toStartOf="@+id/transmissionRG"
                    app:layout_constraintTop_toBottomOf="@+id/transmissionRG" />

                <CheckBox
                    android:id="@+id/listPersonalVehicleCheck"
                    style="@style/InterRegularFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:buttonTint="@color/colorAccent"
                    android:button="@drawable/custom_check_box_black"
                    android:gravity="center|start"
                    android:textAlignment="viewStart"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_11ssp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="@string/i_have_listed_my_personal_vehicle"
                    app:layout_constraintEnd_toEndOf="@+id/clTechnicalReport"
                    app:layout_constraintStart_toStartOf="@+id/majorAccidentCheck"
                    app:layout_constraintTop_toBottomOf="@+id/majorAccidentCheck" />


                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@color/line_bg_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
