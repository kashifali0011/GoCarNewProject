<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/title"
                style="@style/InterSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:padding="@dimen/_10sdp"
                android:text="@string/upload_images"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#929292"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/tvMessage"
                style="@style/InterMediumFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/please_upload_images_of_the_car"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <TextView
                android:id="@+id/message2"
                style="@style/WorkSansRegularFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/you_need_minimum_1_and_nmaximum_6"
                android:textColor="#6B6B6B"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMessage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/message2"
                app:layout_constraintStart_toStartOf="@id/message2"
                app:layout_constraintTop_toBottomOf="@id/message2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvBtnUploadImages"
                    style="@style/SharpGroteskSemiBoldFont10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:backgroundTint="@color/black_text_black_variation_18"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/upload_images_now"
                    android:textAllCaps="true"
                    android:textColor="@color/coral"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/_19ssp"
                    app:cornerRadius="@dimen/_5sdp"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="textStart"
                    app:iconTint="@color/coral" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvBtnUploadPdfs"
                    style="@style/SharpGroteskSemiBoldFont10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBtnUploadImages"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:backgroundTint="@color/black_text_black_variation_18"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/upload_pdfs_now"
                    android:textAllCaps="true"
                    android:textColor="@color/coral"
                    android:textSize="@dimen/_19ssp"
                    app:cornerRadius="@dimen/_5sdp"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="textStart"
                    app:iconTint="@color/coral" />

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>