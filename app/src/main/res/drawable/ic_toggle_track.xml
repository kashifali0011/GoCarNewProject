<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_80sdp" />
            <solid android:color="#BFC4D2" />
            <stroke android:width="1dp" android:color="#BFC4D2" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_80sdp" />
            <gradient android:angle="-45" android:endColor="#1420E4" android:startColor="#0F0F7D" android:type="linear" />
        </shape>
    </item>
</selector>