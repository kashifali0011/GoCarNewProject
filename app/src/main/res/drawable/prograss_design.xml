<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="9"
            android:useLevel="false">
            <solid android:color="#BFC4D2" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape
                android:shape="ring"
                android:thicknessRatio="9"
                android:useLevel="true">
                <gradient
                    android:centerColor="#4CA9FE"
                    android:endColor="#14E3E4"
                    android:startColor="#9021FF"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
</layer-list>